
public class ticTacToe {

	public static void main(String[] args) {
		
		boardGame board=new boardGame('x','o');//initializing a new object for the boardGame class
		
		System.out.println("Welcome to Tic-Tac-Toe\n----------------------");

		do {//do while loop does following while there is no winner or there is no cats game
		
		System.out.println("Player 1 Turn 'X' ");//player 1 turn
		board.displayGraph();//call display graph function from boardGame class to display current game status
		board.askMoveX();//call the function that asks for input on player x move
		board.displayGraph();//display updated graph or game
		if (board.checkWinX()==true) {//checks to see if there are three x in a row and if so then exits program otherwise checks if there is cats game
			System.out.println("X Player wins");//if there is cats game then also exits program
			break;
		}else if(board.catsGame()==false) {
			System.out.println("Cats Game!");
			break;
		}
			
		System.out.println("Player 2 Turn 'O' ");//player 2 turn
		board.askMoveO();// ask player 2 where would like to insert O
		board.displayGraph();//display updated graph
		if(board.checkWinO()==true) {
			System.out.println("O Player wins");
			break;//if there are three O in a row then print O player wins and terminate
		}else if (board.catsGame()==false) {
			System.out.println("Cats Game!");//otherwise check to see if cats game
			break;//exits the program if there is cats game
		}
		
		}while (!board.checkWinX() && !board.checkWinO() && board.catsGame());
	
	}

}
